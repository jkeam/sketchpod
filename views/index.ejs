<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SketchPod</title>
  <link rel='stylesheet' href='/stylesheets/vendor.css' />
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
</head>
<body>
  <nav class="navbar navbar-default navbar-pf navbar-pf-lg" role="navigation">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="index.html">
        <img src="images/logo.svg" alt="brand" height="10">
      </a>
    </div>
  </nav>
  <div class="container-fluid">

<!--
        <hgroup class="page-header">
          <h1>SketchPod</h1>
        </hgroup>
-->

   <div class="row">

      <div class="col-md-6 col-md-push-6">

        <div class="sketch-container">

          <canvas id="canvas" width="400" height="400"></canvas>

          <!--
          <img src='sketch.png' alt='sketch' />
          -->

        </div><!-- sketch-container -->

        <div class="button-group clearfix">
          <div class="pull-left">
            <div class="d-flex">
              <input
                type="color"
                id="color-picker"
                name="color"
                value="#000000"
                class="btn btn-default"
              />
              <input
                id="stroke-picker"
                type="range"
                min="1"
                max="40"
                value="2"
                step="0.1"
                autocomplete="off"
                class="ml-1"
              />
              <button class="btn btn-default ml-1 active" id="draw-btn">
                <i class="fa fa-pencil"></i>
              </button>
              <button class="btn btn-default ml-1" id="erase-btn">
                <i class="fa fa-eraser"></i>
              </button>
            </div>
            <div class="pull-left mt-1">
              <button id="save-btn" class="btn btn-primary">Save</button>
              <button id="clear-btn" class="btn btn-info">Clear</button>
            </div>
          </div>
        </div>

        <div class="mt-1">
          <p id="error-message" class="text-danger"></p>
          <p id="success-message" class="text-success"></p>
        </div>

      </div><!-- col -->

      <div class="col-md-6 col-md-pull-6">

      <div class="info">
        <h2>Status</h2>

        <div class="status-container">
          <strong>
            <i class="fa fa-bookmark"></i>
            Submission
          </strong>
          <h1><%= submission %></h1>
        </div><!-- status-container -->

        <div class="status-container">
          <strong>
            <i class="fa fa-user"></i>
            Username
          </strong>
          <h1><%= username %></h1>
        </div><!-- status-container -->

        <div class="status-container">
          <strong>
            <i class="fa fa-dot-circle-o"></i>
            Client ID
          </strong>
          <h1><%= clientId %></h1>
        </div><!-- status-container -->
      </div><!-- info -->

      </div><!-- col -->

    </div><!-- /row -->
  <!--
    <footer>
      <div class="logo"><a href="https://www.openshift.com/"></a></div>
    </footer>
  -->

  </div><!-- container -->

  <input type="hidden" id="url" value="<%= serverName %>/api/sketch/0?name=<%= username %>&cuid=<%= clientId %>&submission_id=<%= submission %>" />
  <script src="javascripts/doodle.js" type="text/javascript"></script>
</body>
</html>

